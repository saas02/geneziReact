<table align="center" border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" style="border-collapse:collapse; background-color:#f2f2f2; border-radius: 10px; margin:0; padding:0; height:100%!important; width:100%!important">
    <tbody>
        {% block emailHeader %}{% endblock %}
        <tr>
            <td align="center" valign="top" style="margin:0; padding:20px; border-top:0; height:100%!important; width:100%!important">
                <table border="0" cellpadding="0" cellspacing="0" width="600" style="border-collapse:collapse;border:0">
                    {% block body %}{% endblock %}
                </table>
            </td>
        </tr>
        {% block emailFooter %}{% endblock %}
    </tbody>
</table>
